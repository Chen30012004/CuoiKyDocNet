@model CuoiKyDocNet.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(to bottom, #121212, #000000);
            font-family: 'Poppins', sans-serif;
            color: white;
            min-height: 100vh;
            margin: 0;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

            .shape:nth-child(1) {
                width: 200px;
                height: 200px;
                top: -50px;
                left: -50px;
                animation: float 6s infinite ease-in-out;
            }

            .shape:nth-child(2) {
                width: 150px;
                height: 150px;
                bottom: -50px;
                right: -50px;
                animation: float 8s infinite ease-in-out;
            }

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-left: 200px; /* trừ phần sidebar trái */
            padding: 0 1rem;
        }

        .login-card {
            background-color: #181818;
            border-radius: 10px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

            .login-card h3 {
                text-align: center;
                margin-bottom: 30px;
                color: #1DB954;
            }

        .form-label {
            color: #b3b3b3;
        }

        .form-control {
            background-color: #282828;
            color: white;
            border: none;
            padding: 12px;
            margin-top: 5px;
        }

            .form-control:focus {
                background-color: #3a3a3a;
                color: white;
                border-color: #1DB954;
                box-shadow: none;
            }

        .btn-login {
            background-color: #1DB954;
            border: none;
            width: 100%;
            padding: 12px;
            font-weight: bold;
            color: black;
            transition: background-color 0.3s;
        }

            .btn-login:hover {
                background-color: #1ed760;
            }

        .text-danger {
            font-size: 0.9em;
        }

        a.text-warning {
            color: #f1c40f;
            text-decoration: none;
        }

            a.text-warning:hover {
                text-decoration: underline;
            }
    </style>
}

<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>

<div class="login-container">
    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="login-card">
        <h3>Change Password</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group mb-3">
            <label asp-for="OldPassword" class="form-label">Old Password</label>
            <input asp-for="OldPassword" class="form-control" type="password" required />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NewPassword" class="form-label">New Password</label>
            <input asp-for="NewPassword" class="form-control" type="password" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-login mb-2">Change Password</button>

        <div class="text-center">
            <a asp-controller="Manage" asp-action="Index" class="text-warning">Back to Profile</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
