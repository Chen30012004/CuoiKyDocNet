@model CuoiKyDocNet.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Edit Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditProfile" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-white">Email</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label text-white">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReceiveEmailNotifications" class="form-label text-white">Receive Email Notifications</label>
                    <input asp-for="ReceiveEmailNotifications" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="ReceiveEmailNotifications" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Profile" asp-controller="Account" class="text-warning">Back to Profile</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}