@model CuoiKyDocNet.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(to bottom, #121212, #000000);
            font-family: 'Poppins', sans-serif;
            color: white;
            min-height: 100vh;
        }

        .forgot-password-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 60px;
            padding-bottom: 60px;
        }

        .forgot-password-card {
            background-color: #181818;
            border-radius: 10px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
        }

            .forgot-password-card h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #1DB954;
            }

        .form-label {
            color: #b3b3b3;
        }

        .form-control {
            background-color: #282828;
            color: white;
            border: none;
            padding: 12px;
            margin-top: 5px;
        }

            .form-control:focus {
                background-color: #3a3a3a;
                color: white;
                border-color: #1DB954;
            }

        .btn-submit {
            background-color: #1DB954;
            border: none;
            width: 100%;
            padding: 12px;
            font-weight: bold;
            color: black;
        }

            .btn-submit:hover {
                background-color: #1ed760;
            }

        .btn-back {
            background-color: #3a3a3a;
            border: none;
            width: 100%;
            padding: 12px;
            font-weight: bold;
            color: white;
        }

            .btn-back:hover {
                background-color: #4a4a4a;
            }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
}

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <h2>Forgot Password</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-submit mb-2">Submit</button>
            <a asp-controller="Account" asp-action="Login" class="btn btn-back mt-2">Back to Login</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}