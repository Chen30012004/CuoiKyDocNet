@model CuoiKyDocNet.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>

<form asp-action="Login" method="post">
    <h3>Login Here</h3>

    <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? Url.Action("Index", "Home"))" />
    <div class="text-danger" asp-validation-summary="All"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" placeholder="Email or Username" required />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Password" required />
    <span asp-validation-for="Password" class="text-danger"></span>

    <div class="form-check mt-3 mb-3">
        <label class="form-check-label text-white">
            <input asp-for="RememberMe" class="form-check-input" /> Remember Me
        </label>
    </div>

    <button type="submit">Log In</button>

    <div class="links">
        <a asp-action="ForgotPassword">Forgot your password?</a>
        <a asp-action="SignUp">Don't have an account? Sign Up</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
