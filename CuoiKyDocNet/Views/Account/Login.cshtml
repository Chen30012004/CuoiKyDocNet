@model CuoiKyDocNet.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(to bottom, #121212, #000000);
            font-family: 'Poppins', sans-serif;
            color: white;
            min-height: 100vh;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 60px;
            padding-bottom: 60px;
        }

        .login-card {
            background-color: #181818;
            border-radius: 10px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
        }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #1DB954;
        }

        .form-label {
            color: #b3b3b3;
        }

        .form-control {
            background-color: #282828;
            color: white;
            border: none;
            padding: 12px;
            margin-top: 5px;
        }

        .form-control:focus {
            background-color: #3a3a3a;
            color: white;
            border-color: #1DB954;
        }

        .btn-login {
            background-color: #1DB954;
            border: none;
            width: 100%;
            padding: 12px;
            font-weight: bold;
            color: black;
        }

        .btn-login:hover {
            background-color: #1ed760;
        }

        .text-danger {
            font-size: 0.9em;
        }

        a.text-warning {
            color: #1DB954;
        }
    </style>
}

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? Url.Action("Index", "Home"))" />
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" /> Remember Me
                </label>
            </div>

            <button type="submit" class="btn btn-login mb-2">Login</button>

            <div class="text-center">
                <a asp-action="ForgotPassword" class="text-warning">Forgot your password?</a>
            </div>
        </form>

        <div class="text-center mt-3">
            Don't have an account?
            <a asp-action="SignUp" class="text-warning">Sign Up</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
