@model CuoiKyDocNet.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Your Profile</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
                <h4 class="text-white">Profile Information</h4>
                <hr class="bg-white" />
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Receive Email Notifications:</strong> @(Model.ReceiveEmailNotifications ? "Yes" : "No")</p>
                <div class="mt-3">
                    <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
                    <form asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-secondary">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>