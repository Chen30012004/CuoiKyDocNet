@model CuoiKyDocNet.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Role:</strong> @Model.Role</p>
        <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-warning mt-3">Change Password</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="ManagePodcasts" asp-controller="Admin" class="btn btn-primary mt-3 ms-2">Manage Podcasts</a>
        }
    </div>
</div>