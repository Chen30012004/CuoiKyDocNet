@model CuoiKyDocNet.Models.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>

<form asp-action="SignUp" method="post">
    <h3>Sign Up</h3>

    <div class="text-danger" asp-validation-summary="All"></div>

    <label asp-for="FullName"></label>
    <input asp-for="FullName" placeholder="Full Name" required />
    <span asp-validation-for="FullName" class="text-danger"></span>

    <label asp-for="Email"></label>
    <input asp-for="Email" placeholder="Email" required />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Password" required />
    <span asp-validation-for="Password" class="text-danger"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" placeholder="Confirm Password" required />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <div class="form-check mt-3 mb-3">
        <label class="form-check-label text-white">
            <input asp-for="ReceiveEmailNotifications" class="form-check-input" /> Receive Email Notifications
        </label>
    </div>

    <button type="submit">Sign Up</button>

    <div class="links">
        <a asp-action="Login">Back to Login</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
