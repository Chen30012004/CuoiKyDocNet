@model CuoiKyDocNet.Models.Episode
@{
    ViewData["Title"] = "Add Episode";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Add Episode</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-dark p-4 rounded-0 border-0 text-white">
                <form asp-action="AddEpisode" method="post">
                    <input type="hidden" asp-for="PodcastId" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="text-white"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="text-white"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AudioUrl" class="text-white"></label>
                        <input asp-for="AudioUrl" class="form-control" />
                        <span asp-validation-for="AudioUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Duration" class="text-white"></label>
                        <input asp-for="Duration" type="number" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add Episode</button>
                </form>
                <div class="mt-3 text-center">
                    <a asp-action="DetailsPodcast" asp-controller="Admin" asp-route-id="@Model.PodcastId" class="btn btn-secondary">Back to Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}