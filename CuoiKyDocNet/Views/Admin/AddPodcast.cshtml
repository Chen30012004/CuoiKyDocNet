@model CuoiKyDocNet.Models.Podcast
@{
    ViewData["Title"] = "Add Podcast";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Add Podcast</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-dark p-4 rounded-0 border-0 text-white">
                <form asp-action="AddPodcast" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="text-white"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="text-white"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="text-white"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Category" class="text-white"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add Podcast</button>
                </form>
                <div class="mt-3 text-center">
                    <a asp-action="ManagePodcasts" class="btn btn-secondary">Back to Manage Podcasts</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}