@model CuoiKyDocNet.Models.Podcast

@{
    ViewData["Title"] = "Add Podcast";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">
        <i class="fas fa-plus me-2"></i>Add New Podcast
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        <form asp-action="AddPodcast" method="post">
            <div class="mb-3">
                <label class="form-label text-white">Title</label>
                <input type="text" name="title" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Description</label>
                <textarea name="description" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Image URL</label>
                <input type="text" name="imageUrl" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Category</label>
                <input type="text" name="category" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Podcast
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left me-2"></i>Back to Admin Panel
            </a>
        </form>
    </div>
</div>