@model CuoiKyDocNet.Models.Podcast

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Podcast" : "Edit Podcast";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">
        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        <form asp-action="EditPodcast" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label text-white">Title</label>
                <input type="text" name="title" value="@Model.Title" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Description</label>
                <textarea name="description" class="form-control" required>@Model.Description</textarea>
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Image URL</label>
                <input type="text" name="imageUrl" value="@Model.ImageUrl" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Category</label>
                <input type="text" name="category" value="@Model.Category" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Save Changes
            </button>
            @if (Model.Id != 0)
            {
                <button type="submit" name="action" value="Delete" class="btn btn-danger ms-2" onclick="return confirm('Are you sure you want to delete this podcast?');">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            }
            <a asp-action="ManagePodcasts" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left me-2"></i>Back to Manage Podcasts
            </a>
        </form>
    </div>
</div>