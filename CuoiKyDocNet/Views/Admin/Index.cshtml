@model CuoiKyDocNet.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Admin Dashboard</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-dark p-4 rounded-0 border-0 text-white">
                <h4 class="text-white">Welcome, Admin!</h4>
                <hr class="bg-white" />
                <p>Manage users below:</p>
                @if (Model?.Users != null && Model.Users.Any())
                {
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Full Name</th>
                                <th>Email Confirmed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                                    <td>
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No users found.</p>
                }
                <div class="mt-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>