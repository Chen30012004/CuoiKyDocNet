@model CuoiKyDocNet.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">
        <i class="fas fa-shield-alt me-2"></i>Admin Panel
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        <!-- Danh sách người dùng -->
        <h4 class="mb-4">User List</h4>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>
                            <form asp-action="DeleteUser" method="post">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Danh sách podcast -->
        <h4 class="mb-4 mt-5">Podcast List</h4>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var podcast in Model.Podcasts)
                {
                    <tr>
                        <td>@podcast.Title</td>
                        <td>@podcast.Description</td>
                        <td>
                            <form asp-action="DeletePodcast" method="post">
                                <input type="hidden" name="id" value="@podcast.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Form thêm podcast -->
        <h4 class="mb-4 mt-5">Add New Podcast</h4>
        <form asp-action="AddPodcast" method="post">
            <div class="mb-3">
                <label class="form-label text-white">Title</label>
                <input type="text" name="title" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label text-white">Description</label>
                <textarea name="description" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Podcast
            </button>
        </form>

        <!-- Nút Logout -->
        <div class="mt-4">
            <h4 class="text-white">
                <i class="fas fa-sign-out-alt me-2"></i>Logout
            </h4>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </button>
            </form>
        </div>
    </div>
</div>