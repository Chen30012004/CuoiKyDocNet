@model CuoiKyDocNet.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Admin Dashboard</h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="bg-dark p-4 rounded-0 border-0 text-white">
                <h4 class="text-white">Welcome, Admin!</h4>
                <hr class="bg-white" />

                <!-- User List Section -->
                <h5 class="text-white">User List</h5>
                @if (Model?.Users != null && Model.Users.Any())
                {
                    <table class="table table-dark mb-5">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Full Name</th>
                                <th>Email Confirmed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-warning">No users found.</p>
                }
                <a asp-action="ManageUsers" class="btn btn-primary mb-4">Manage Users</a>

                <!-- Podcast List Section -->
                <h5 class="text-white mt-5">Podcast List</h5>
                @if (Model?.Podcasts != null && Model.Podcasts.Any())
                {
                    <table class="table table-dark mb-5">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var podcast in Model.Podcasts)
                            {
                                <tr>
                                    <td>@podcast.Title</td>
                                    <td>@podcast.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-warning">No podcasts found.</p>
                }
                <a asp-action="ManagePodcasts" class="btn btn-primary mb-4">Manage Podcasts</a>

                <div class="mt-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>