@model IList<CuoiKyDocNet.Models.Podcast>

@{
    ViewData["Title"] = "Manage Podcasts";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">
        <i class="fas fa-podcast me-2"></i>Manage Podcasts
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var podcast in Model)
        {
            <div class="col">
                <a asp-action="EditPodcast" asp-route-id="@podcast.Id" class="text-decoration-none">
                    <div class="card bg-dark text-white h-100">
                        @if (!string.IsNullOrEmpty(podcast.ImageUrl))
                        {
                            <img src="@podcast.ImageUrl" class="card-img-top" alt="@podcast.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                <span class="text-gray-500">No image</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@podcast.Title</h5>
                            <p class="card-text">@podcast.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-action="AddPodcast" class="btn btn-primary mt-3">
            <i class="fas fa-plus me-2"></i>Add New Podcast
        </a>
        <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary mt-3 ms-2">
            <i class="fas fa-arrow-left me-2"></i>Back to Admin Panel
        </a>
    </div>
</div>