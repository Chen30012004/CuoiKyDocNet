@model CuoiKyDocNet.Models.AdminViewModel

@{
    ViewData["Title"] = "Manage Podcasts";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Manage Podcasts</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <p class="text-white">Welcome, @Model.FullName (@Model.Email) - Role: @Model.Role</p>
    <a asp-action="AddPodcast" class="btn btn-success mb-3">Add New Podcast</a>

    @if (Model.Podcasts != null && Model.Podcasts.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var podcast in Model.Podcasts)
                {
                    <tr>
                        <td>@podcast.Title</td>
                        <td>@podcast.Category</td>
                        <td>
                            <a asp-action="EditPodcast" asp-route-id="@podcast.Id" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-white">No podcasts to manage.</p>
    }
</div>