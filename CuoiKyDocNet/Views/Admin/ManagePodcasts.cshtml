@model CuoiKyDocNet.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Manage Podcasts";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Manage Podcasts</h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="bg-dark p-4 rounded-0 border-0 text-white">
                <!-- Add Podcast Button -->
                <a asp-action="AddPodcast" class="btn btn-success mb-3">Add Podcast</a>

                @if (Model?.Podcasts != null && Model.Podcasts.Any())
                {
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image URL</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var podcast in Model.Podcasts)
                            {
                                <tr>
                                    <td>@podcast.Title</td>
                                    <td>@podcast.Description</td>
                                    <td>@podcast.ImageUrl</td>
                                    <td>@podcast.Category</td>
                                    <td>
                                        <a asp-action="DetailsPodcast" asp-controller="Admin" asp-route-id="@podcast.Id" class="btn btn-info btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-warning">No podcasts found.</p>
                }
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>