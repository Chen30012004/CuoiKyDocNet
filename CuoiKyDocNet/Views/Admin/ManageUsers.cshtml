@model IEnumerable<CuoiKyDocNet.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">Manage Users</h2>
    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Email Confirmed</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">Manage Roles</a>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-secondary">Back to Admin Dashboard</a>
    </div>
</div>