@model IList<CuoiKyDocNet.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-white">
        <i class="fas fa-users me-2"></i>Manage Users
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="profile-info bg-dark p-4 rounded-0 border-0 text-white">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>
                            <form asp-action="DeleteUser" method="post">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left me-2"></i>Back to Admin Panel
        </a>
    </div>
</div>