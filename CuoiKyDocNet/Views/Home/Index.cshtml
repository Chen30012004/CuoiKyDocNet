@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<CuoiKyDocNet.Models.Podcast>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Hero Section -->
<section class="hero-section text-white d-flex align-items-center" style="min-height: 100vh;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-logo mb-4">
                    <i class="fab fa-spotify" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-3 fw-bold mb-3">Discover Amazing Podcasts with Podcastify</h1>
                <p class="lead mb-4">Explore a wide range of podcasts, from technology to health, and enjoy seamless listening.</p>
                <a href="@Url.Action("Index", "Podcasts")" class="btn btn-success btn-lg">Browse Now</a>
            </div>
        </div>
    </div>
</section>
<!-- Featured Podcasts Section -->
<section class="featured-podcasts py-5">
    <div class="container">
        <h2 class="mb-4 text-white">Featured Podcasts</h2>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var podcast in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="podcast-card">
                            <a asp-controller="Podcasts" asp-action="Details" asp-route-id="@podcast.Id" class="text-decoration-none">
                                <img src="@podcast.ImageUrl" alt="@podcast.Title" class="img-fluid rounded shadow" style="height: 200px; object-fit: cover;" />
                                <div class="p-3">
                                    <h5 class="text-white">@podcast.Title</h5>
                                    <p class="text-muted">@podcast.Description.Substring(0, Math.Min(podcast.Description.Length, 100))...</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No featured podcasts available.</p>
            }
        </div>
    </div>
</section>

<!-- Recently Played Section -->
<section class="recently-played py-5">
    <div class="container">
        <h2 class="mb-4 text-white">Recently Played</h2>
        <div class="row">
