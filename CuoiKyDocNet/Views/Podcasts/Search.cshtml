@model IEnumerable<CuoiKyDocNet.Models.Podcast>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Search Podcasts</h1>
<form asp-action="Search" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="query" class="form-control bg-dark text-white" placeholder="Search for podcasts..." />
        <button type="submit" class="btn btn-success">Search</button>
    </div>
</form>
<div class="row">
    @foreach (var podcast in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="podcast-card">
                <a asp-action="Details" asp-route-id="@podcast.Id" class="text-decoration-none">
                    <img src="@podcast.ImageUrl" alt="@podcast.Title" class="img-fluid" />
                    <div class="p-3">
                        <h5>@podcast.Title</h5>
                        <p class="description">@podcast.Description.Substring(0, Math.Min(podcast.Description.Length, 100))...</p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>